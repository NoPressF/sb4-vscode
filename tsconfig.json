{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"strict": true,
		"baseUrl": ".",
		"outDir": "dist",
		"paths": {
			"@utils": [
				"src/utils/index.ts"
			],
			"@managers": [
				"src/managers/index.ts"
			],
			"@providers": [
				"src/providers/index.ts"
			]
		},
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	}
}